<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.human.gulim.runcatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.human.gulim.runcatch.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="org.human.gulim.runcatch.SetNickNameActivity"
            android:label="@string/title_activity_set_nick_name" >
        </activity>
        <activity
            android:name="org.human.gulim.runcatch.JoinRoomActivity"
            android:label="@string/title_activity_join_room" >
        </activity>
        <activity
            android:name="org.human.gulim.runcatch.CommunicationsEnableActivity"
            android:label="@string/title_activity_communications_enable" >
        </activity>
        <activity
            android:name="org.human.gulim.runcatch.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>